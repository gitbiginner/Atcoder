   "source": [
    "N = int(input())\n",
    "C = list(map(int, input().split()))\n",
    "\n",
    "Cs = sorted(C)\n",
    "mod = 10**9+7\n",
    "\n",
    "ans = 1\n",
    "for i in range(N):\n",
    "    if Cs[i] ==0:\n",
    "        ptint(0)\n",
    "        exit()\n",
    "\n",
    "    ans = ans*(Cs[i]-i)\n",
    "    ans = ans % mod\n",
    "print(ans)\n",
    "\n",
    "\n",
    "\n"
   ]
